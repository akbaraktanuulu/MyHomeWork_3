<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/dark"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">

   <androidx.cardview.widget.CardView
       android:id="@+id/crd_view"
       android:layout_width="344dp"
       android:layout_height="200dp"
       android:layout_marginHorizontal="10dp"
       android:layout_marginVertical="80dp"
       android:layout_marginTop="48dp"
       app:cardBackgroundColor="@color/white"
       app:cardCornerRadius="16dp"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent">

      <androidx.constraintlayout.widget.ConstraintLayout

          android:layout_width="match_parent"
          android:layout_height="match_parent">

         <com.google.android.material.button.MaterialButton
             android:id="@+id/categori"
             app:cornerRadius="10dp"
             app:layout_goneMarginTop="13dp"
             android:insetBottom="0dp"
             android:insetTop="0dp"
             android:text="Categori"
             android:backgroundTint="@color/red"
             android:layout_width="80dp"
             android:layout_height="23dp"
             android:layout_marginTop="13dp"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"/>

         <TextView
            android:id="@+id/text_explore"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Explore the nightlife of your city"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginHorizontal="61dp"
             android:layout_marginTop="32dp"
             android:paddingStart="50dp"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/categori"/>

         <LinearLayout
             android:id="@+id/options"
             android:layout_width="296dp"
             android:layout_height="36dp"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintBottom_toBottomOf="parent"
             android:layout_marginBottom="16dp"
             android:layout_marginStart="32dp">
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="48dp"
                android:layout_height="32sp">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Free"
                   android:textStyle="bold"
                   android:layout_gravity="center"
                   android:textColor="@color/black"
                   />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="PriceðŸ’°"
                   android:textSize="10sp"
                   android:layout_gravity="center"
                   android:textColor="@color/black"/>
            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="107dp"
                android:layout_height="35.94dp"
                android:layout_marginStart="39dp">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                  <ImageView
                      android:layout_width="24dp"
                      android:layout_height="23dp"
                      android:src="@drawable/ic_person1"/>
                  <ImageView
                      android:layout_width="24dp"
                      android:layout_height="23dp"
                      android:layout_marginHorizontal="4dp"
                      android:src="@drawable/ic_person2"/>
                  <ImageView
                      android:layout_width="24dp"
                      android:layout_marginEnd="3dp"
                      android:layout_height="23dp"
                      android:src="@drawable/ic_person3"/>
                  <FrameLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">
                     <ImageView
                         android:layout_width="24dp"
                         android:layout_height="23dp"
                         android:src="@drawable/ic_persen4"
                         />
                     <TextView
                         android:text="+"
                         android:textColor="@color/white"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:textSize="8.5sp"
                         android:paddingTop="9dp"
                         android:paddingStart="13.5dp"
                         />
                  </FrameLayout>
               </LinearLayout>
               <TextView
                   android:text="Participants"
                   android:textSize="10sp"
                   android:layout_marginTop="1dp"
                   android:textColor="@color/black"
                   android:textAlignment="center"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_height="wrap_content">
               <FrameLayout
                   android:layout_width="81dp"
                   android:layout_height="10dp"
                   android:layout_marginTop="9.5dp"
                   android:background="@drawable/bg_12"
                   />
               <TextView
                   android:text="Accessibility"
                   android:layout_marginTop="3dp"
                   android:textSize="10sp"
                   android:layout_gravity="center_horizontal"
                   android:textColor="@color/black"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   />
            </LinearLayout>
         </LinearLayout>


      </androidx.constraintlayout.widget.ConstraintLayout>


   </androidx.cardview.widget.CardView>

   <Button

       android:background="@drawable/ic_next_button"
       android:id="@+id/next_button"
       android:text="Next"
       android:textColor="@color/white"
       android:textSize="16sp"
       android:layout_marginTop="28dp"
       android:layout_marginHorizontal="9dp"
       app:layout_constraintTop_toBottomOf="@+id/crd_view"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       android:layout_width="343dp"
       android:layout_height="wrap_content"/>

   <TextView
       android:id="@+id/category_mini_text"
       android:text="Categori"
       android:textColor="@color/white"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@id/next_button"
       app:layout_constraintStart_toStartOf="@id/next_button"
       android:layout_marginTop="33dp"
       />


   <FrameLayout
       android:id="@+id/dropdownBG"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="5dp"
       android:background="@drawable/ic_dr"
       app:layout_constraintStart_toStartOf="@id/category_mini_text"
       app:layout_constraintTop_toBottomOf="@id/category_mini_text">
      <Spinner
          android:id="@+id/dropdown"
          android:layout_width="158dp"
          android:layout_height="41dp"
          android:paddingHorizontal="16dp"
          tools:ignore="TouchTargetSizeCheck" />
   </FrameLayout>

   <com.google.android.material.slider.RangeSlider
       android:id="@+id/range_slider"
       android:layout_width="200dp"
       android:layout_height="5.6dp"
       android:layout_marginBottom="12dp"
       app:layout_constraintBottom_toBottomOf="@id/dropdownBG"
       app:layout_constraintStart_toEndOf="@id/dropdownBG"
       app:thumbColor="@color/thumb_color"
       app:thumbHeight="14dp"
       app:thumbWidth="14dp"
       app:trackColorActive="@color/active_line_color"
       app:trackColorInactive="@color/white"
       app:trackHeight="5.6dp"
       android:valueFrom="0.0"
       android:valueTo="100.0"
       app:values="@array/default_values" />

   <TextView
       android:id="@+id/price_mini_text"
       android:text="@string/price_text"
       android:textColor="@color/normal_grey"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@id/next_button"
       app:layout_constraintStart_toStartOf="@id/range_slider"
       android:layout_marginTop="33dp"
       android:layout_marginStart="13dp"
       />

   <com.google.android.material.slider.RangeSlider
       android:id="@+id/range_slider2"
       android:layout_width="200dp"
       android:layout_height="5.6dp"
       android:layout_marginBottom="12dp"
       app:layout_constraintTop_toBottomOf="@id/range_slider"
       app:layout_constraintStart_toEndOf="@id/dropdownBG"
       app:thumbColor="@color/thumb_color"
       app:thumbHeight="14dp"
       app:thumbWidth="14dp"
       android:layout_marginTop="60dp"
       app:trackColorActive="@color/active_line_color"
       app:trackColorInactive="@color/white"
       app:trackHeight="5.6dp"
       android:valueFrom="0.0"
       android:valueTo="100.0"
       app:values="@array/default_values" />

   <TextView
       android:id="@+id/accessibility_mini_text"
       android:text="@string/accessibility_text"
       android:textColor="@color/normal_grey"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintTop_toBottomOf="@id/range_slider"
       app:layout_constraintStart_toStartOf="@id/range_slider2"
       android:layout_marginTop="54dp"
       android:layout_marginStart="13dp"
       />

</androidx.constraintlayout.widget.ConstraintLayout>